@using WebApplication3.Models
@model IEnumerable<WebApplication3.Models.ImageWithText>

<div class="row">
    <div class="col-md-6 col-md-offset-3 well">
        <form method="post" action="/home/upload" enctype="multipart/form-data">
            <input type="file" name="image" class="form-control" />
            <br />
            <input type="text" class="form-control" name="text" placeholder="Image Text" />
            <br />
            <button class="btn btn-primary">Upload</button>
        </form>
    </div>

    <div class="col-md-6 col-md-offset-3">
        <table class="table table-striped table-bordered">
            <tr>
                <th>Image</th>
                <th>Text</th>
            </tr>
            @foreach (ImageWithText image in Model)
            {
                <tr>
                    <td>
                        <img src="/Images/@image.FileName" style="width: 300px;"/>
                    </td>
                    <td>
                        @image.ImageText
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

